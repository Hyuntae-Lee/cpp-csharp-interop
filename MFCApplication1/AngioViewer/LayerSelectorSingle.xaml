<UserControl x:Class="AngioViewer.LayerSelectorSingle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AngioViewer"
             xmlns:uc="clr-namespace:AngioViewer"
             mc:Ignorable="d" 
             Height="36" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <uc:ComboLayerSelector Grid.Column="0" Width="123" HorizontalAlignment="Left" />
            <TextBox MinWidth="50" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Black" Margin="4, 0, 4, 0"/>
            <Button Width="36" Height="36" Content="+" Background="#39404A" Foreground="White"/>
            <Button Width="36" Height="36" Content="-" Background="#39404A" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
