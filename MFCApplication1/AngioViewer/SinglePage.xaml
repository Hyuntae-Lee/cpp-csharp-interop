<Page x:Class="AngioViewer.SinglePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:uc="clr-namespace:AngioViewer"
      xmlns:local="clr-namespace:AngioViewer"
      mc:Ignorable="d" 
      Height="auto" Width="1280"
      Title="SinglePage"
      Background="Black">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!-- page title bar -->
        <Grid Grid.Row="0">
            <uc:PageTitleSingle x:Name="pageTitle" />
        </Grid>
        <!-- body -->
        <Frame Name="body" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
